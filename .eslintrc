{
    "rules": {
        "indent": [ 2, 4 ],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "always" ],
        "no-unused-vars": [ 2, {
            "vars": "all",
            "args": "none"
        } ],
        "spaced-comment": [ 2, "always" ]
    },
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "env": {
        "node": true,
        "browser": true
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "electronRequire": true,
        "remote": true
    },
    "extends": "eslint:recommended"
}